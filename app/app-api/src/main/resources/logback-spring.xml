<configuration packagingData="true" scan="true">
    <!--<include resource="org/springframework/boot/logging/logback/base.xml" />-->

    <contextName>${HOSTNAME}</contextName>

    <springProfile name="local">
        <property name="LOG_HOME" value="/tmp/weproud"/>
    </springProfile>

    <springProfile name="dev">
        <property name="LOG_HOME" value="/var/log/weproud"/>
    </springProfile>

    <springProfile name="prod">
        <property name="LOG_HOME" value="/var/log/weproud"/>
    </springProfile>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%contextName] [%d{yyyy.MM.dd HH:mm:ss.SSS}] [%-5level] [%thread] [%X{traceId:-startup}] - [%logger{5}] - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="json_console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.contrib.json.classic.JsonLayout">
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSS'Z'</timestampFormat>
                <timestampFormatTimezoneId>Asia/Seoul</timestampFormatTimezoneId>
                <appendLineSeparator>true</appendLineSeparator>
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>false</prettyPrint>
                </jsonFormatter>
            </layout>
        </encoder>
    </appender>

    <springProfile name="local">
        <root level="info" additivity="false">
            <appender-ref ref="console"/>
        </root>
        <logger name="com.weproud" level="DEBUG"/>
    </springProfile>

    <springProfile name="dev">
        <root level="info" additivity="false">
            <appender-ref ref="console"/>
        </root>
        <logger name="com.weproud" level="DEBUG"/>
    </springProfile>
    <springProfile name="prod">
        <root level="info" additivity="false">
            <appender-ref ref="console"/>
        </root>
        <logger name="com.weproud" level="DEBUG"/>
    </springProfile>
</configuration>